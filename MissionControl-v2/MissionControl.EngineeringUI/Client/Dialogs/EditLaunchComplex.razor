@using MissionControl

<RadzenTemplateForm TItem="LaunchComplex" Data=@Edited Submit=@OnOk Style="height: 100%;">
    <div class="row" style="height: 100%; overflow-y: auto;">
        <div class="content-container">
            <!-- To avoid stretching every row of the fixed height container above -->
            <div class="row">
                <div class="col-3 align-items-center d-flex">
                    <RadzenLabel Text="Name" />
                </div>
                <div class="col-9">
                    <RadzenTextBox Name="ComplexName" @bind-Value=@Edited.Name />
                    <RadzenRequiredValidator Component="ComplexName" Text="Name is required" />
                </div>
            </div>
            <div class="row">
                <div class="col-3 align-items-center d-flex">
                    <RadzenLabel Text="Hangar bay endpoint" />
                </div>
                <div class="col-9">
                    <RadzenTextBox @bind-Value=@EditedHangarBayEndpoint />
                    @if (EditedHangarBayEndpointErrorMessage != "")
                    {
                        <span class="rz-message rz-messages-error">
                            @EditedHangarBayEndpointErrorMessage
                        </span>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-3 align-items-center d-flex">
                    <RadzenLabel Text="Hangar bay identifier" />
                </div>
                <div class="col-9 rz-pb-4">
                    <div class="align-items-center d-flex align-flex-row">
                        <RadzenTextBox Value=@Edited.HangarBay.Identifier.ToString() Disabled="true" />
                        <RadzenButton Size="ButtonSize.Large" class="rz-ml-4" Icon="refresh" ButtonStyle="ButtonStyle.Light" Disabled=@(EditedHangarBayEndpoint == "")
                                      Click=@OnValidateHangarBayEndpoint />
                    </div>
                    @if (EditedHangarBayIdentifierErrorMessage != "")
                    {
                        <span class="rz-message rz-messages-error" style="width: 100%;">
                            @EditedHangarBayIdentifierErrorMessage
                        </span>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-9 align-items-start d-flex align-flex-row rz-mb-2">
                    <RadzenText class="col-5" TextStyle="TextStyle.H6" Text="Launchpads" />
                    <RadzenButton Click=@AddLaunchPad Text="Add New" Icon="add_circle_outline"
                                  ButtonStyle="ButtonStyle.Info" class="mt-2" />
                </div>
                <div class="col-9">
                    <RadzenDataGrid Data=@Edited.LaunchPads @ref="m_LaunchpadsGrid">
                        <Columns>
                            <RadzenDataGridColumn TItem="LaunchPad" Title="Name" Property="Name" />
                            <RadzenDataGridColumn TItem="LaunchPad" Title="Endpoint" Property="Endpoint" />
                            <RadzenDataGridColumn TItem="LaunchPad" Width="110px">
                                 <Template Context="launchPad">
                                    <RadzenButton Click=@(() => EditLaunchPad(launchPad)) Icon="edit" ButtonStyle="ButtonStyle.Light"
                                                  class="m-1 data-grid-icon" />
                                    <RadzenButton Click=@(() => DeleteLaunchPad(launchPad)) Icon="delete" ButtonStyle="ButtonStyle.Light"
                                                  Class="m-1 data-grid-icon" />
                                </Template>
                            </RadzenDataGridColumn>
                        </Columns>
                    </RadzenDataGrid>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-1">
        <div class="col-12 text-end">
            <RadzenButton Text="Cancel" Click=OnCancel ButtonStyle="ButtonStyle.Light" Style="width: 120px" />
            <RadzenButton Text=@(ToEdit.Id == Guid.Empty ? "Add" : "Update") ButtonType="ButtonType.Submit" ButtonStyle="ButtonStyle.Info"
                          Style="width: 120px; margin-left:24px;" Class="me-1" />
        </div>
    </div>
</RadzenTemplateForm>



